<!DOCTYPE html>
<html lang="fr">
	{% set route_name = app.request.attributes.get('_route', '') %}
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>{% block title '' %}{{ route_name != 'home' ? " | Elsass Web Devs" }}</title>
		<meta name="description" content="{% block description '' %}">

		<link rel="icon" href="{{ asset('icons/favicon.ico') }}" type="image/x-icon">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body class="{{ route_name }}">
		{% include "elements/_header.html.twig" %}
		{% include "elements/_flash.html.twig" %}

		<main id="main">
			{% block body %}{% endblock %}
		</main>

		{% include "elements/_footer.html.twig" %}
	</body>
</html>
