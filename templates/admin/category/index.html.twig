{% extends 'admin/base.html.twig' %}

{% block title "Bonjour Admin" %}
{% block description "Gestion administrateur categorie" %}

{% block body %}
	<div class="container">
		<h1>Catégories index</h1>
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>Slug</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.name }}</td>
							<td>{{ category.slug }}</td>
							<td>
								<a class="btn btn-warning" href="{{ path('admin_category_show', {'id': category.id}) }}">Détails</a>
								<a class="btn btn-info" href="{{ path('admin_category_edit', {'id': category.id}) }}">Éditer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">Aucune donnée trouvée</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a class="btn btn-primary" href="{{ path('admin_category_new') }}">Créer nouvelle</a>
	</div>
{% endblock %}
