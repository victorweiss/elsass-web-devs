{% extends 'admin/base.html.twig' %}

{% block title "Voir categorie" %}
{% block description "Details administrateur categorie" %}

{% block body %}
<div class="container">
    <h1>Category</h1>

    <table class="table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_category_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_category_edit', {'id': category.id}) }}">Éditer</a>

    {{ include('admin/category/_delete_form.html.twig') }}
</div>
{% endblock %}
