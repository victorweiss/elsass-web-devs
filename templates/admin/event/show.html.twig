{% extends 'admin/base.html.twig' %}

{% block title "Détails événement" %}
{% block description "Details administrateur événement" %}

{% block body %}
	<div class="mb-3">
		<a href="{{ path('admin_article_index') }}">
			<i class="bi bi-arrow-left me-2"></i>
			Retour à la liste</a>
	</div>
	<h1>Evénement</h1>
	<div class="table-responsive">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ event.id }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ event.title }}</td>
				</tr>
				<tr>
					<th>slug</th>
					<td>{{ event.slug }}</td>
				</tr>
				<tr>
					<th>Body</th>
					<td>{{ event.body }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td><img src="{{ vich_uploader_asset(event, 'imageFile') | imagine_filter('normal') }}" alt="{{event.title}}"></td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>UpdatedAt</th>
					<td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				{# <tr>
								<th>ImageName</th>
								<td>{{ event.imageName }}</td>
							</tr>
							<tr>
								<th>ImageSize</th>
								<td>{{ event.imageSize }}</td>
							</tr> #}
				<tr>
					<th>IsBookingAvailable</th>
					<td>{{ event.isBookingAvailable ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>TotalSeats</th>
					<td>{{ event.totalSeats }}</td>
				</tr>
				<tr>
					<th>StartAt</th>
					<td>{{ event.startAt ? event.startAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>EndAt</th>
					<td>{{ event.endAt ? event.endAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>AdminNote</th>
					<td>{{ event.adminNote }}</td>
				</tr>
			</tbody>
		</table>

	</div>
	<a class="btn btn-warning" href="{{ path('admin_event_index') }}">Retour à la liste</a>

	<a class="btn btn-info" href="{{ path('admin_event_edit', {'id': event.id}) }}">Éditer</a>

	{{ include('admin/event/_delete_form.html.twig') }}
</div>{% endblock %}
