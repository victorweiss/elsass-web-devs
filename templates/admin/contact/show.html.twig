{% extends 'admin/base.html.twig' %}

{% block title "Voir contact" %}
{% block description "Details administrateur contact" %}

{% block body %}

<div class="container">
    <h1>Contact</h1>

    <table class="table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Créer à</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('admin_contact_index') }}">Retour à la liste</a>

    {{ include('admin/contact/_delete_form.html.twig') }}
<div>
{% endblock %}
