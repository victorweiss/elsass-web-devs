{% extends 'admin/base.html.twig' %}

{% block title "Voir tag" %}
{% block description "Details administrateur tag" %}

{% block body %}
	<div class="container">
		<h1>Tag</h1>
		<div class="table-responsive">
			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ tag.id }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ tag.name }}</td>
					</tr>
					<tr>
						<th>Slug</th>
						<td>{{ tag.slug }}</td>
					</tr>
				</tbody>
			</table>
		</div>
		<a href="{{ path('admin_tag_index') }}">Retour à la liste</a>

		<a href="{{ path('admin_tag_edit', {'id': tag.id}) }}">Éditer</a>

		{{ include('admin/tag/_delete_form.html.twig') }}
	</div>
{% endblock %}
