{% extends 'base.html.twig' %}

{% block title "Voir contact" %}
{% block description "Details administrateur contact" %}

{% block body %}
	{% include "admin/_admin_nav.html.twig" %}

<div class="container">
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_contact_index') }}">back to list</a>

    <a href="{{ path('admin_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('admin_contact/_delete_form.html.twig') }}
<div>
{% endblock %}
